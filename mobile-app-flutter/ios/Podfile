# Uncomment this line to define a global platform for your project
platform :ios, '26.2'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  inhibit_all_warnings!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      # Define permission handler macros to enable specific permissions
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)', 'PERMISSION_MICROPHONE=1', 'PERMISSION_CAMERA=1', 'PERMISSION_PHOTOS=1', 'PERMISSION_LOCATION=1', 'PERMISSION_NOTIFICATIONS=1', 'PERMISSION_BLUETOOTH=1', 'PERMISSION_APP_TRACKING_TRANSPARENCY=1']

      # Fix deployment target warnings - Standardizing to a real supported version
      if config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f < 17.0
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '17.0'
      end
      
      # Optimize for iOS 17.0
      config.build_settings['SWIFT_VERSION'] = '6.0'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '17.0'
      
      # Performance optimizations for iOS 26.2
      config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-O'
      config.build_settings['GCC_OPTIMIZATION_LEVEL'] = 's'
      config.build_settings['SWIFT_COMPILATION_MODE'] = 'wholemodule'
      
      # iOS 26.2 specific optimizations
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['SWIFT_ACTIVE_COMPILATION_CONDITIONS'] = '$(inherited)'
      
      # Suppress haptic pattern errors (simulator issue)
      config.build_settings['GCC_WARN_ABOUT_MISSING_FIELD_INITIALIZERS'] = 'NO'
      
      # Suppress warnings for specific pods that have known issues
      if target.name.include?('Sentry')
        # Suppress Swift library evolution warnings
        config.build_settings['SWIFT_SUPPRESS_WARNINGS'] = 'YES'
        config.build_settings['OTHER_SWIFT_FLAGS'] = '$(inherited) -suppress-warnings'
      end
      
      if target.name.include?('flutter_local_notifications')
        # Suppress incomplete implementation warnings
        config.build_settings['GCC_WARN_INCOMPLETE_IMPLEMENTATION'] = 'NO'
      end
      
      # Fix Swift 6.0 concurrency errors for plugins not yet updated
      # Many Flutter plugins haven't been updated for Swift 6.0 strict concurrency
      # Use Swift 5.9 for all plugin targets to ensure compatibility
      # Only use Swift 6.0 for the main Runner target
      if target.name == 'Runner'
        # Main app target can use Swift 6.0
        config.build_settings['SWIFT_VERSION'] = '6.0'
        config.build_settings['SWIFT_STRICT_CONCURRENCY'] = 'targeted'
      else
        # All plugin targets use Swift 5.9 for compatibility
        config.build_settings['SWIFT_VERSION'] = '5.9'
        config.build_settings['SWIFT_STRICT_CONCURRENCY'] = 'none'
        config.build_settings['SWIFT_SUPPRESS_WARNINGS'] = 'YES'
      end
      
      # General warning suppression for all pods
      config.build_settings['GCC_WARN_64_TO_32_BIT_CONVERSION'] = 'NO'
      config.build_settings['CLANG_WARN__DUPLICATE_METHOD_MATCH'] = 'NO'
      config.build_settings['GCC_WARN_DEPRECATED_FUNCTIONS'] = 'NO'
      config.build_settings['CLANG_WARN_DEPRECATED_OBJC_IMPLEMENTATIONS'] = 'NO'
      config.build_settings['CLANG_WARN_DOCUMENTATION_COMMENTS'] = 'NO'
      config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
      config.build_settings['CLANG_WARN_STRICT_PROTOTYPES'] = 'NO'
      config.build_settings['CLANG_WARN_UNREACHABLE_CODE'] = 'NO'
      config.build_settings['GCC_WARN_UNUSED_FUNCTION'] = 'NO'
      config.build_settings['GCC_WARN_UNUSED_VARIABLE'] = 'NO'
      config.build_settings['SWIFT_SUPPRESS_WARNINGS'] = 'YES'
      config.build_settings['SWIFT_TREAT_WARNINGS_AS_ERRORS'] = 'NO'
      
      # Fix 'cryptexd' search path errors by ensuring inherited paths are used
      config.build_settings['LIBRARY_SEARCH_PATHS'] = '$(inherited)'
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] = '$(inherited)'
      
      # Explicitly remove any hardcoded toolchain paths that might be injected
      if config.build_settings['LIBRARY_SEARCH_PATHS'].is_a?(Array)
        config.build_settings['LIBRARY_SEARCH_PATHS'].reject! { |path| path.include?('cryptexd') }
      end
    end
  end
end
